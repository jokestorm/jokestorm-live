<% layout('/layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Memeber</h1>
  <div class="col-6 offset-3">
    <form action="/memes/<%= meme._id %>?_method=PUT" method="post" class="validated-form" novalidate>
      <div class="mb-3">
        <!-- <label for="handle">Username</label> -->
        <input type="text" class="form-control" name="meme[handle]" id="handle" placeholder="Username" value="<%= meme.handle %>" required>
        <div class="valid-feedback">
          Nice.
        </div>
      </div>
      <div class="mb-3">
        <!-- <label for="email">Email</label> -->
        <input type="text" class="form-control" name="meme[email]" id="email" placeholder="Email" value="<%= meme.email %>" required>
        <div class="valid-feedback">
          Close Enough.
        </div>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-info">Save Changes</button>
      </div>
    </form>
    <a class="btn btn-danger" href="/memes/<%= meme._id%>">Cancel</a>
  </div>
</div>