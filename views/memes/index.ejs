<% layout('/layouts/boilerplate') %>
<h1>All Memes</h1>
<% if (memes.length==0) { %>
<p>There's nothing here.</p>
<% } else { %>
<% for (let meme of memes){%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid p-2" src="/img/Orange-Cat.png" alt="">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h2 class="card-title">
          <%= meme.title %>
        </h2>
        <p class="card-text">
          <small class="text-muted"><%= meme.description %></small>
        </p>
        <a class="btn btn-primary" href="memes/<%= meme._id %>">View Meme</a>
      </div>
    </div>
  </div>
</div>
<% }%>
<% }%>