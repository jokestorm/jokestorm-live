<% layout('/layouts/boilerplate') %>
<h1>All Members</h1>
<% if (members.length==0) { %>
<p>There's nothing here.</p>
<% } else { %>
<% for (let member of members){%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid p-2" src="/img/Orange-Cat.png" alt="">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h2 class="card-title">
          <%= member.handle %>
        </h2>
        <p class="card-text">
          <small class="text-muted">A Cool Cat</small>
        </p>
        <a class="btn btn-primary" href="members/<%= member._id %>">View Profile</a>
        <% if (member.idle.highScore) { %>
        <h3 class="mt-3">Idle High Score: <span class="badge bg-secondary">
            <%= member.idle.highScore %>
          </span></h3>
        <% } %>
      </div>
    </div>
  </div>
</div>
<% }%>
<% }%>