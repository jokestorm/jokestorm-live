<% layout('/layouts/boilerplate') %>
    <h1>All Members</h1>
    <% for (let member of members){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid p-2" src="https://source.unsplash.com/random/?technology" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= member.handle %>
                        </h5>
                        <p class="card-text">
                            <small class="text-muted">A Cool Cat</small>
                        </p>
                        <a class="btn btn-primary" href="members/<%= member._id %>">View Profile</a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>