<% layout('/layouts/boilerplate') %>
<h1>All Posts</h1>
<% if (posts.length==0) { %>
<p>There's nothing here.</p>
<% } else { %>
<% for (let post of posts){%>
<div class="card mb-3">
  <% if (post.images[0]) { %>
     <div class="row">
    <div class="col-md-4">
      <img class="img-fluid p-2" src="<%= post.images[0].url %>" alt="">
    </div>
  <% } %>
    <div class="col-md-8">
      <div class="card-body">
        <h2 class="card-title">
          <%= post.title %>
        </h2>
        <p class="card-text">
          <small class="text-muted"><%= post.description %></small>
        </p>
        <a class="btn btn-primary" href="posts/<%= post._id %>">View Post</a>
      </div>
    </div>
  </div>
</div>
<% }%>
<% }%>